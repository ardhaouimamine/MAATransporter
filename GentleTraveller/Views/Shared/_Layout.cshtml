<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <base href="/">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="description" content="The description of my page" />
</head>
<body ng-app="transporterlist" ng-controller="layoutController as vm" layout="column">
    <md-toolbar layout="row">
        <md-button class="menu" ng-click="vm.toggleSideNav()" aria-label="Show Menu">
            <ng-md-icon size="48" icon="menu"></ng-md-icon>
        </md-button>
        <h1>YOLO MR TRANSPORTER</h1>
    </md-toolbar>
    <div flex layout="row">

        <md-sidenav md-component-id="left" md-is-locked-open="vm.toggleMenu" class="md-whiteframe-z2">
            <md-list>
                <md-list-item ng-repeat="it in vm.sideNavElements">
                    <md-button ng-click="" ng-class="{'selected' : it === 'Home' }">
                        {{it}}
                    </md-button>
                </md-list-item>
            </md-list>
        </md-sidenav>

        <md-content flex id="content">
            <div ng-view>
                @RenderBody()
            </div>
        </md-content>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
